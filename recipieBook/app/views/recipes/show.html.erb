<div class="container mb-4 ms-2">
    <%= link_to "Volver al menú", recipes_path, class: "btn btn-secondary" %>
</div>
<div class="container">
    <h1><%= @recipe.title %></h1>
    <div class="container">
        <h4>Tiempo de preparación</h4>
        <p><%= @recipe.cook_time %> minutos</p>
    </div>
    <div class="container">
        <h4>Dificultad</h4>
        <p><%= @recipe.difficulty %></p>
    </div>
    <div class="container">
        <h4>Instrucciones</h4>
        <p><%= @recipe.instructions %></p>
    </div>
    <div class="container">
        <% if can?(:edit, @recipe) %>
            <%= link_to "Editar", edit_recipe_path(@recipe), class: "btn btn-primary" %>
        <% end %>
        <% if can?(:destroy, @recipe) %>
            <%= link_to "Eliminar", recipe_path(@recipe), data: { turbo_method: :delete, turbo_confirm: "Estas seguro que quieres eliminarla?" }, class: "btn btn-danger" %>
        <% end %>
    </div>
</div>